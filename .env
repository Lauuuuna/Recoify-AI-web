# Backend Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Spotify API Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback

# Database Configuration (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/spotify_ai

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SPOTIFY_AUTH_URL=https://accounts.spotify.com/authorize
REACT_APP_SPOTIFY_SCOPES=user-library-read user-top-read playlist-read-private user-read-recently-played

# Performance Configuration
CACHE_TIMEOUT=3600  # 1 hour cache for API responses